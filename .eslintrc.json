{
    "ignorePatterns": [
      "**/config.ts",
      "node_modules/*",
      "public/*",
      "**/*.scss",
      "**/*.css",
      "**/*.json",
      "**/*.ttf",
      "**/*.woff",
      "**/*.test.js",
      "dist",
      "vite.config.ts",
      "**/*.d.ts"
    ],
    "env": {
      "browser": true,
      "es2021": true
    },
    "parser": "vue-eslint-parser",
    "parserOptions": {
      "parser": "@typescript-eslint/parser",
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": [
      "vue",
      "@typescript-eslint",
      "prettier"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:vue/recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended"
    ],
    "rules": {
      "indent": ["error", "tab"],
      "quotes": ["error", "double"],
      "semi": ["error", "always"],
      "no-control-regex": 0,
      "prettier/prettier": "error",
      "@typescript-eslint/no-unused-vars": [
        "warn",
        {
          "argsIgnorePattern": "^_",
          "caughtErrorsIgnorePattern": "^_"
        }
      ],
      "vue/multi-word-component-names": "off"
    }
  }